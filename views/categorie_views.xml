<odoo>
    <record id="view_patrimoine_categorie_tree" model="ir.ui.view">
        <field name="name">patrimoine.categorie.tree</field>
        <field name="model">patrimoine.categorie</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="view_patrimoine_categorie_form" model="ir.ui.view">
        <field name="name">patrimoine.categorie.form</field>
        <field name="model">patrimoine.categorie</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_patrimoine_categorie" model="ir.actions.act_window">
        <field name="name">Catégories</field>
        <field name="res_model">patrimoine.categorie</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_patrimoine_categorie"
            name="Catégories"
            parent="menu_patrimoine_config"
            action="action_patrimoine_categorie"
            sequence="1"/>

</odoo>
