<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_patrimoine_perte_form"
            model="ir.ui.view">
            <field name="name">patrimoine.perte.form</field>
            <field name="model">patrimoine.perte</field>
            <field name="arch"
                type="xml">
                <form string="Déclaration de Perte">
                    <header>
                        <button name="action_confirm"
                            type="object"
                            string="Confirmer"
                            class="oe_highlight"
                            invisible="state != 'pending'"/>
                        <button name="action_reject"
                            type="object"
                            string="Rejeter"
                            invisible="state != 'pending'"/>
                        <field name="state"
                            widget="statusbar"
                            statusbar_visible="pending,confirmed,rejected,processed"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="asset_id"/>
                            <field name="date"/>
                            <field name="declarer_par_id"/>
                            <field name="motif"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_patrimoine_perte_tree"
            model="ir.ui.view">
            <field name="name">patrimoine.perte.tree</field>
            <field name="model">patrimoine.perte</field>
            <field name="arch"
                type="xml">
                <tree string="Déclarations de Perte">
                    <field name="name"/>
                    <field name="asset_id"/>
                    <field name="date"/>
                    <field name="declarer_par_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_patrimoine_perte"
            model="ir.actions.act_window">
            <field name="name">Déclarations de Perte</field>
            <field name="res_model">patrimoine.perte</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_patrimoine_perte"
            name="Déclarations de Perte"
            parent="menu_patrimoine_entretiens"
            action="action_patrimoine_perte"
            sequence="50"/>
    </data>
</odoo>
